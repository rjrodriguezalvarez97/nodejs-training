{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@infra/*": ["infra/*"],
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"]
    },
    "module": "commonjs",
  },
  "include": ["./src/**/*.ts"],
}
